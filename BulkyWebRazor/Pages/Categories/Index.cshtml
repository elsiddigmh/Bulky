@page
@model BulkyWebRazor.Pages.Categories.IndexModel
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h3>Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-page="/categories/create">Create New Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                                    <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                            Edit
                        </a>
                        <a asp-page="/categories/delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                            Delete
                        </a>
                    </div>
                </td
                </tr>
            }
        </tbody>

    </table>
</div>
